<table class="table">
    <tbody>
    <tr>
        <th>Title</th>
        <td>{{ event.title }}</td>
    </tr>
    <tr>
        <th>Description</th>
        <td>{{ event.description }}</td>
    </tr>
    <tr>
        <th>Start Date</th>
        <td>{{ event.startDate ? event.startDate|date('d M Y H:i:s') }}</td>
    </tr>
    <tr>
        <th>End Date</th>
        <td>{{ event.endDate ? event.endDate|date('d M Y H:i:s') }}</td>

    </tbody>
</table>

